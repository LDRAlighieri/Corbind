<resources>

    <style name="Theme.Corbind" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

    </style>


    <!-- TextInputLayout Email -->
    <style name="Widget.Corbind.TextInputLayout.Email" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/login_email_hint</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!-- TextInputLayout Password -->
    <style name="Widget.Corbind.TextInputLayout.Password" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:hint">@string/login_password_hint</item>
        <item name="passwordToggleEnabled">true</item>
    </style>



    <!-- TextInputEditText -->
    <style name="Widget.Corbind.TextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- TextInputEditText Email -->
    <style name="Widget.Corbind.TextInputEditText.Email" parent="Widget.Corbind.TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_email_grey_500</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!-- TextInputEditText Password -->
    <style name="Widget.Corbind.TextInputEditText.Password" parent="Widget.Corbind.TextInputEditText">
        <item name="android:drawableStart">@drawable/ic_lock_grey_500</item>
        <item name="android:inputType">textPassword</item>
    </style>


</resources>
